{
  "name": "flight-finder",
  "version": "0.0.0",
  "description": "Flight Finder",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "browserslist": "> 0.1%, not dead",
  "scripts": {
    "b": "yarn build",
    "cb": "npm-run-all --sequential clean build",
    "s": "yarn serve:dev",
    "w": "yarn watch",
    "build": "npm-run-all --sequential build:ts build:es",
    "build:ts": "tsc --build --pretty",
    "build:es": "rm -rf build && rollup -c",
    "clean": "yarn build:ts --clean && rm -rf build && find src -name '*.js' -type f -delete && find src -name '*.d.ts' -type f -delete && find src -name '*.map' -type f -delete",
    "serve:dev": "web-dev-server --config dev-server.mjs",
    "watch": "npm-run-all --print-label --parallel watch:* serve:dev",
    "watch:ts": "yarn build:ts --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@alwatr/element": "^0.22.0",
    "@alwatr/fetch": "^0.22.1",
    "@alwatr/font": "^0.22.1",
    "@alwatr/icon": "^0.22.1",
    "@alwatr/logger": "^0.22.0",
    "@alwatr/math": "^0.22.1",
    "@alwatr/router": "^0.22.1",
    "@alwatr/signal": "^0.22.1",
    "@ionic/core": "^6.3.8",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "lit": "^2.4.1",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@web/dev-server": "^0.1.35",
    "lerna": "^6.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.2.5",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.8.4"
  }
}
